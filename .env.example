# ============================
# SERVER CONFIGURATION
# ============================
NODE_ENV=production
PORT=5000

# ============================
# DATABASE
# ============================
MONGODB_URI=mongodb://localhost:27017/telegram-copier

# ============================
# REDIS
# ============================
REDIS_URL=redis://localhost:6379

# ============================
# JWT AUTHENTICATION
# ============================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ============================
# TELEGRAM API
# ============================
API_ID=12345678
API_HASH=your_api_hash_here

# ============================
# METAAPI
# ============================
META_API_TOKEN=your_metaapi_token_here

# ============================
# DEEPSEEK (OPTIONAL)
# ============================
DEEPSEEK_API_KEY=

# ============================
# CLIENT (FRONTEND)
# ============================
CLIENT_URL=http://localhost:3000

# ============================
# GLOBAL RISK DEFAULTS
# ============================
MAX_DAILY_TRADES=20
MAX_OPEN_POSITIONS=5
MAX_DAILY_DRAWDOWN_PERCENT=5
RISK_MODE=fixed
RISK_PERCENT_PER_TRADE=1

# ============================
# BREAKEVEN DEFAULTS
# ============================
AUTO_BREAKEVEN_ENABLED=true
AUTO_BREAKEVEN_TRIGGER_PIPS=15
AUTO_BREAKEVEN_LOCK_PIPS=2
TRAILING_STOP_ENABLED=false
TRAILING_STOP_PIPS=10

# ============================
# SIGNALS
# ============================
SIGNAL_COOLDOWN_SECONDS=300
MIN_SIGNAL_CONFIDENCE=0.5

# ============================
# LOGGING
# ============================
LOG_LEVEL=info
